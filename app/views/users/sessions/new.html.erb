<div id="login" class="login-form-container">
 <header>LOGIN</header>
  <fieldset>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-wrapper">
      <div class="input-one">
      <i class="fa-solid fa-envelope fa-sm" style="color: #fc7148;"></i>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com" %>
      </div>

      <div class="input-second">
      <i class="fa-solid fa-key fa-sm" style="color: #fc7148;"></i>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
      </div>
    </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
      <%= f.submit "Log in" %>
      </div>
    <% end %>
  </fieldset>
 </div>

<%= render "users/shared/links" %>
