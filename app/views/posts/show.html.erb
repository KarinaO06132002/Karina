<div class="detail">
<h3>投稿詳細</h3>
</div>

<div class="post-detail">
  <div class="detail-user">
  <%= image_tag @post.user.image_url, size: "60x60", class: "circular-image" if @post.user.image? %>
  <p><%= @post.user.name %></p>
  </div>

  <div class="share-detail">
    <div class="name-area">
      <div class="detail-name">
      <p><%= @post.name %></p>
      </div>

      <div class="detail-area">
      <h3>ーーーーーーーーーーーーーー</h3>
      <p><%= @post.area %></p>
      <p><%= @post.adress %></p>
      </div>
    </div>

    <div class="detail-image">
    <%= image_tag @post.image_url, size: "600x450", class: "spot-image" if @post.image? %>
    </div>
  </div>

  <div class="detail-point">
  <p><%= @post.point %></p>
  </div>

  <div class="detail-heart">
  <% if user_signed_in? %>
    <% if current_user.already_liked?(@post) %>
      <%= link_to post_like_path(@post), method: :delete do %>
        <i class="fa-solid fa-heart fa-2xl" style="color: #e1a3c7;"></i><%= @post.likes.count %>
      <% end %>
    <% else %>
      <%= link_to post_likes_path(@post), method: :post do %>
        <i class="fa-solid fa-heart fa-2xl" style="color: #e1a3c7;"></i><%= @post.likes.count %>
      <% end %>
    <% end %>
  <% else %>
    <i class="fa-solid fa-heart fa-2xl" style="color: #e1a3c7;"></i><%= @post.likes.count %>
  <% end %>
  </div>
</div>

  <div class="heart-user"> 
  <h2>いいねしたユーザー</h2>
  <% @post.liked_users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
  </div>
</div>

<div class="comment-wrapper">
  <p>〈コメント一覧〉</p>
  <% @comments.each do |c| %>
    <div class="user-comment">
      <%= c.user.name unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="detail-edit">   
<%= link_to "編集する", edit_post_path(@post.id) %>
<%= button_to "削除する", post_path(@post.id), method: :delete %>
<%= link_to "スポット一覧に戻る", posts_path %>
</div>